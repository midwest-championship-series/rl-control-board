<!DOCTYPE html>
<html lang="en" style="background: rgb(108,172,220);">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Minnesota Championship Series</title>

        <link rel="stylesheet" href="./css/index.min.css"/>
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400&display=swap" rel="stylesheet">
        <style>
            #login-div {
                min-width: 100%;
                min-height: 100%;
                position: absolute;
                top: 0;
                left: 0;
                z-index: 99;
                width: 100%;
                height: 100%;
                background-color: rgba(108, 172, 220, 0.75);
                display: flex;
                justify-content: center;
                align-items: center;
                flex-direction: column;
            }
            #login-token {
                min-width: 800px;
                min-height: 100px;
                font-size: 50px;
            }
            #login-btn {
                min-width: 900px;
                min-height: 75px;
                font-size: 30px;
            }
            .uk-input {
                border: 1px solid #000; 
            }
            .uk-form-icon {
                color: #444;
            }
            p {
                margin: 0px;
                margin-top: 10px;
                font-size: 36px;
                font-family: 'Oswald', sans-serif;
                color: white;
            }
        </style>
    </head>
    <body>
        <!-- Login Form Page -->
        <div class="uk-container uk-position-center uk-align-center" id="login-div" style="">
            <form id="login-form">
                <div class="uk-margin">
                    <p style="font-size: 96px;text-align:center;">Overlay Login</p>
                </div>
                <div class="uk-margin uk-animation-fade" id="invalid-token" style="display: none;">
                    <p style="color: #f00;text-align:center;font-weight:300;">Token Invalid.</p>
                </div>
                <div class="uk-margin" style="margin-top: 50px;">
                    <div class="uk-inline">
                        <span class="uk-form-icon" uk-icon="icon: lock; ratio: 3;" style="margin-right: 20px;"></span>
                        <input class="uk-input" type="text" placeholder="Token" id="login-token" required />
                    </div>
                </div>
                <div class="uk-margin" style="margin-top: 20px;">
                    <input id="login-btn" class="uk-input" type="submit" value="Login" />
                </div>
            </form>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/uikit@3.6.15/dist/js/uikit.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.6.15/dist/js/uikit-icons.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script>
            $(() => {
                $("#login-form").submit(function (evt) {
                    evt.preventDefault();
                    var token = document.getElementById("login-token").value;

                    $.post(window.location.origin + "/login", { token: token }).done(function(data) {
                        // If the token authenticates correctly, the server will respond with 200 OK saying successful. 
                        // If it says successful, set the cookie to the token we just validated then refresh
                        if(data === "successful") {
                            setCookie("token", token);
                            location.reload();
                        }
                    }).fail(function() {
                        // Auth failure
                        if(document.getElementById("invalid-token").style.display === "none") {
                            document.getElementById("invalid-token").style.display = "block";
                        } else {
                            var $animate = $("#invalid-token");
                            $animate.addClass("uk-animation-shake");
                            $animate.one("webkitAnimationEnd oanimationend msAnimationEnd animationend",   
                            function() {
                                $animate.removeClass("uk-animation-shake");
                                $animate.removeClass("uk-animation-fade");
                            });
                        }
                    });
                });
            });
            
            // setCookie & getCookie from https://www.w3schools.com/js/js_cookies.asp
            function setCookie(cname, cvalue, exdays) {
                var d = new Date();
                d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000));
                var expires = "expires="+d.toUTCString();
                document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
            }

            function getCookie(cname) {
                var name = cname + "=";
                var ca = document.cookie.split(';');
                for(var i = 0; i < ca.length; i++) {
                    var c = ca[i];
                    while (c.charAt(0) == ' ') {
                        c = c.substring(1);
                    }
                    if (c.indexOf(name) == 0) {
                        return c.substring(name.length, c.length);
                    }
                }
                return "";
            }

        </script>
    </body>
</html>