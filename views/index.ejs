        <div class="uk-container" id="login-div">
            <div id="loading" style="background-color:rgba(85, 85, 85, 0.596);opacity:0;">
                <span style="margin-left:200px;margin-top:50px;color:white;" uk-spinner="ratio: 3"></span>
            </div>
            <div id="login-content">
                <div id="server-entry" style="background-color:#ccc;display:flex;flex-direction: column;justify-content: center;align-items: center;">
                    <h3>Minnesota Championship Series</h3>
                    <div style="width:400px;height:initial;">
                        <input class="uk-input uk-form-width-medium" style="border-top-left-radius: 10px;border-bottom-left-radius:10px;width:70px;margin-right:-5px;color:#fff;background-color:#aaa;border-color:black;" type="text" placeholder="https://" value="https://" disabled />
                        <input id="server" class="uk-input uk-form-width-medium" style="width:330px;" type="text" placeholder="Relay Server" />
                    </div>
                    <button class="uk-button uk-button-primary" style="width: 90px;margin-left:auto;" onclick="validateServer()">Next ></button>
                </div>
                <div id="token-entry" style="background-color:#aaa;display:flex;flex-direction: column;justify-content: center;align-items: center;">
                    <div style="width:400px;height:initial;">
                        <input class="uk-input uk-form-width-medium" style="width:400px;" id="token" type="text" placeholder="Token" />
                    </div>
                    <button class="uk-button uk-button-primary" style="width: 90px;margin-left:auto;" onclick="validateToken()">Login</button>
                </div>
            </div>

